<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="name_hidden" inherit_id="website_sale.address" priority="1" active="False">
        <xpath expr="//div[contains(@t-attf-class, 'div_name')]" position="attributes">
            <attribute name="hidden">True</attribute>
        </xpath>
    </template>

